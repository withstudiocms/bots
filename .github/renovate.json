{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>withstudiocms/renovate-config"],
  "packageRules": [
    {
      "groupName": "Apollo Dependencies",
      "matchManagers": ["npm", "dockerfile"],
      "matchFileNames": ["packages/apollo/**", "apollo.Dockerfile"]
    },
    {
      "groupName": "Artemis Dependencies",
      "matchManagers": ["npm", "dockerfile"],
      "matchFileNames": [
        "packages/artemis/**",
        "artemis.Dockerfile",
        "!@algolia/**",
        "!algoliasearch"
      ]
    },
    {
      "matchUpdateTypes": ["major"],
      "matchPackageNames": ["!@algolia/**", "!algoliasearch"]
    }
  ],
  "ignoreDeps": ["@types/node", "node", "npm", "pnpm"]
}
