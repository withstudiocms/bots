{
  "name": "apollo",
  "version": "1.0.0",
  "description": "Apollo is a fully-configurable Discord Bot that helps with managing Discord Servers for OSS projects.",
  "type": "module",
  "scripts": {
    "copy-build-json": "cp -r src/activities dist/activities && cp -r src/ping-replies dist/ping-replies && cp src/*.schema.json dist/",
    "build": "tsdown && pnpm copy-build-json",
    "db:push": "pnpm drizzle-kit push",
    "db:generate": "pnpm drizzle-kit generate",
    "db:migrate": "pnpm drizzle-kit migrate",
    "db:check": "pnpm drizzle-kit check",
    "db:studio": "pnpm drizzle-kit studio"
  },
  "keywords": [],
  "author": "withstudiocms",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@libsql/client": "catalog:",
    "@octokit/webhooks": "catalog:",
    "@octokit/webhooks-types": "catalog:",
    "bufferutil": "^4.1.0",
    "consola": "^3.4.2",
    "discord.js": "^14.25.1",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "octokit": "catalog:",
    "parse-duration": "^1.1.2",
    "pretty-ms": "^9.3.0",
    "zlib-sync": "^0.1.10",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "drizzle-kit": "catalog:"
  }
}
